{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "types": [
    "node",
    "webpack",
    "react",
    "react-dom",
    "reactstrap",
    "react-scroll"
  ],
  "include": [
    "src"
  ],
  "exclue": [
    "node_modules",
    "build"
  ],
  "compileOnSave": true
}
